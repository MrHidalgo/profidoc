include ../_mixin/mixin

-
    var arrFontName = [
        'https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800'
    ];

    var arrStyleName = [
        './style/style.min.css',
        './style/_dop/breadcrumbs.min.css',
        './style/personal-area/personal-area.min.css',
        './style/personal-area/header.min.css',
        './style/personal-area/content.min.css',
        './style/personal-area/left-nav.min.css',
        './style/personal-area/main.min.css'
    ]

    var scriptName = [
        './script/jquery.min.js',
        './script/script.min.js'
    ];





doctype html
html
    head
        +htmlTemplateHEAD('Личный кабинет', arrFontName, arrStyleName, false)

    body

        // NAVIGATION MENU
        include ../_template/_dop/nav

        // BREADCRUMBS BLOCK
        block breadcrumbs
            include ../_template/personal-area/breadcrumbs


        block personal-header
            include ../_template/personal-area/header

        block personal-content
            include ../_template/personal-area/personal-content


        // FOOTER MENU
        include ../_template/_dop/footer

        +htmlTemplateFOOT(scriptName)