include ../_mixin/mixin

-
    var arrFontName = [
        'https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800'
    ];

    var arrStyleName = [
        './style/style.min.css',
        './style/news-details.min.css'
    ];

    var scriptName = [
        './script/jquery.min.js',
        './script/script.min.js'
    ];



doctype html
html
    head
        +htmlTemplateHEAD('Страница конкретной новости', arrFontName, arrStyleName, false)

    body.internal

        include ../_template/_dop/nav

        .wrap-container
            block sign
                include ../_template/main/form-sign

            // BREADCRUMBS BLOCK
            block breadcrumbs
                include ../_template/news-details/breadcrumbs


            block content
                include ../_template/news-details/content


        include ../_template/_dop/footer

        +htmlTemplateFOOT(scriptName)

