mixin tableRowinfo (arr, arrClass)
    td(class= arrClass)!= arr[i]



section#main.main
    .main-row-my1
        p.title!= 'Проверенные контрагенты'

        table(cellspacing='0', class='check', id='check')
            thead
                tr
                    - for(var i = 0; i < tableTitle.length; i++)
                        th!= tableTitle[i]
            tbody
                - for(var i = 0; i < tableTitle.length; i++)
                    tr
                        +tableRowinfo(tableName, 'name')
                        +tableRowinfo(tableCode, 'code')
                        +tableRowinfo(tableStatus, 'status')
                        +tableRowinfo(tableDate, 'data-end')
                        +tableRowinfo(tableDownload, 'download')

        a(href='#', class='btn-all-check')!= 'Все проверки'
        a(href='#', class='btn-new-check')!= 'Проверить нового контрагента'
