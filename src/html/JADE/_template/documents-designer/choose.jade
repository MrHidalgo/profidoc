-
    var chooseTxt1All = 'Популярные документы';

    var chooseTxt1Free = 'Бесплатные документы';

    var chooseTxt2All = 'Все документы';

    var chooseTxt2Free = 'Все бесплатные документы';

    var chooseArrAll = [
        'Документ купли-продажи автомобиля (транспортного средства)',
        'Документ ссуды нежилого помещения',
        'Документ между юридическим лицом и работником',
        'Документ о совместной деятельности'
    ];

    var chooseArrFree = [
        'Расписка',
        'Документ о сотрудничестве (партнёрстве)',
        'Документ физического лица с работником',
        'Документ о совместной деятельности'
    ];


mixin chooseRow(opt, txt1, txt2, arr)
    p.title!= txt1

    .wrap
        - for(var i = 0; i < arr.length; i++)
            a(href='#', class='btn-choose-contracts')!= arr[i]

    if (opt == 0)
        a(href='#', class='btn-choose-all')!= txt2
    else if (opt == 1)
        a(href='#', class='btn-choose-free')!= txt2


section#choose.choose
    .choose-container
        .choose-row
            +chooseRow(0, chooseTxt1All, chooseTxt2All, chooseArrAll)

        .choose-row
            +chooseRow(1, chooseTxt1Free, chooseTxt2Free, chooseArrFree)